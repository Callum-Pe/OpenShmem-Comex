PREFIX = @PREFIX@

SHMEM_MANPAGES_1 = $(wildcard *.1)
SHMEM_MANPAGES_3 = $(wildcard *.3)
SHMEM_MANPAGES_5 = $(wildcard *.5)

IMPL_TEX = openshmem-implementation.tex
IMPL_PDF = $(IMPL_TEX:.tex=.pdf)

REMOVE   = rm -f

.PHONY: all default
.PHONY: install install-man1 install-man3 install-man5
.PHONY: uninstall uninstall-man1 uninstall-man3 uninstall-man5
.PHONY: clean distclean

.SUFFIXES: .tex .pdf

#
# don't go nuts if pdflatex not installed
#

%.pdf:	%.tex
	-pdflatex $<
	-pdflatex $<

all default:	$(IMPL_PDF)

# -------------------------------------------------------------------

install:	install-man1	install-man3	install-man5

install-man1:	all
	mkdir -p $(PREFIX)/share/man/man1
	for p in $(SHMEM_MANPAGES_1); do \
		install -c -m 644 $$p $(PREFIX)/share/man/man1; \
	done

install-man3:	all
	mkdir -p $(PREFIX)/share/man/man3
	for p in $(SHMEM_MANPAGES_3); do \
		install -c -m 644 $$p $(PREFIX)/share/man/man3; \
	done

install-man5:	all
	mkdir -p $(PREFIX)/share/man/man5
	for p in $(SHMEM_MANPAGES_5); do \
		install -c -m 644 $$p $(PREFIX)/share/man/man5; \
	done

# -------------------------------------------------------------------

uninstall:	uninstall-man1	uninstall-man3 uninstall-man5
	-rmdir $(PREFIX)/share/man

uninstall-man1:
	for p in $(SHMEM_MANPAGES_1); do \
		$(REMOVE) $(PREFIX)/share/man/man1/$$p; \
	done
	-rmdir $(PREFIX)/share/man/man1

uninstall-man3:
	for p in $(SHMEM_MANPAGES_3); do \
		$(REMOVE) $(PREFIX)/share/man/man3/$$p; \
	done
	-rmdir $(PREFIX)/share/man/man3

uninstall-man5:
	for p in $(SHMEM_MANPAGES_5); do \
		$(REMOVE) $(PREFIX)/share/man/man5/$$p; \
	done
	-rmdir $(PREFIX)/share/man/man5

# -------------------------------------------------------------------

clean:
	$(REMOVE) *.aux *.log *.out *.toc

distclean: clean
	$(REMOVE) $(IMPL_PDF)
	$(REMOVE) Makefile

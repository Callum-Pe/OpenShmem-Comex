PREFIX = @PREFIX@

SHMEM_MANPAGES_1 = $(wildcard *.1)
SHMEM_MANPAGES_3 = $(wildcard *.3)

IMPL_TEX = openshmem-implementation.tex
IMPL_PDF = $(IMPL_TEX:.tex=.pdf)

REMOVE   = rm -f

.PHONY: all default
.PHONY: install install-man1 install-man3
.PHONY: uninstall uninstall-man1 uninstall-man3
.PHONY: clean distclean

.SUFFIXES: .tex .pdf

#
# don't go nuts if pdflatex not installed
#

%.pdf:	%.tex
	-pdflatex $<
	-pdflatex $<

all default:	$(IMPL_PDF)

# -------------------------------------------------------------------

install:	install-man1	install-man3

install-man1:	all
	mkdir -p $(PREFIX)/man/man1
	for p in $(SHMEM_MANPAGES_1); do \
		install -c -m 644 $$p $(PREFIX)/man/man1; \
	done

install-man3:	all
	mkdir -p $(PREFIX)/man/man3
	for p in $(SHMEM_MANPAGES_3); do \
		install -c -m 644 $$p $(PREFIX)/man/man3; \
	done

# -------------------------------------------------------------------

uninstall:	uninstall-man1	uninstall-man3
	-rmdir $(PREFIX)/man

uninstall-man1:
	for p in $(SHMEM_MANPAGES_1); do \
		$(REMOVE) $(PREFIX)/man/man1/$$p; \
	done
	-rmdir $(PREFIX)/man/man1

uninstall-man3:
	for p in $(SHMEM_MANPAGES_3); do \
		$(REMOVE) $(PREFIX)/man/man3/$$p; \
	done
	-rmdir $(PREFIX)/man/man3

# -------------------------------------------------------------------

clean:

distclean: clean
	$(REMOVE) $(IMPL_PDF)
	$(REMOVE) Makefile

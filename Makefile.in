.PHONY: all all-doc all-src
.PHONY: install install-doc install-src
.PHONY: uninstall uninstall-doc uninstall-src
.PHONY: clean clean-doc clean-src
.PHONY: distclean

# -------------------------------------------------------------

all: all-doc all-src

all-doc:
	$(MAKE) -C doc all

all-src:
	$(MAKE) -C src all

# -------------------------------------------------------------

install: install-doc install-src

install-doc:
	$(MAKE) -C doc install

install-src:
	$(MAKE) -C src install

# -------------------------------------------------------------

uninstall: uninstall-doc uninstall-src

uninstall-doc:
	$(MAKE) -C doc uninstall

uninstall-src:
	$(MAKE) -C src uninstall

# -------------------------------------------------------------

clean: clean-doc clean-src

clean-doc:
	$(MAKE) -C doc clean

clean-src:
	$(MAKE) -C src clean

# -------------------------------------------------------------

distclean:	clean
	rm -f config.status
	rm -f src/Makefile doc/Makefile

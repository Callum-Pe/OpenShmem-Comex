# ---------------------------------------------------------

COMMS_DIR        =    ../comms
COMMS_CPPFLAGS   =    -I$(COMMS_DIR)

# ---------------------------------------------------------

CC               = @CC@
CFLAGS           = @CFLAGS@
CPPFLAGS         = @CPPFLAGS@
LD               = @LD@
LDFLAGS          = @LDFLAGS@

ifeq "@DEBUG@" "TRUE"
CPPFLAGS        += -DDEBUG
endif

CPPFLAGS        += -I..
CPPFLAGS        += $(COMMS_CPPFLAGS)

CFLAGS          += -fPIC
CFLAGS          += $(HASH_CFLAGS)

.PHONY: all default clean

SOURCES  = $(wildcard *.c)
OBJECTS  = $(SOURCES:.c=.o)

all default:	$(OBJECTS)

clean:
	rm -f $(OBJECTS)

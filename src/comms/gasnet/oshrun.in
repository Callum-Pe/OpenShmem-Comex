#!/bin/sh
#
# generated from OpenSHMEM src directory, don't edit installed version
#

progname="`basename $0`"

show_usage_and_exit()
{
    if [ $# -gt 0 ]
    then
        echo "Error: $@"
        echo ""
    fi
    echo "Usage: $progname [conduit options] -n|-np PEs program [program args]"
    echo ""
    echo "  Where"
    echo ""
    echo "    -n | -np PEs    is the number of processing elements to launch"
    echo ""

    exit 1
}

if [ $# -eq 0 ]
then
    show_usage_and_exit
fi

#
# pass through args, trap -np N
#

npes=""
launcher_args=""
app_args=""
gotmm=0

while [ $# -gt 0 ]
do
    case $gotmm in
	0)
	    case "$1" in
		--)
		    gotmm=1
		    ;;
		-n | -np)
		    shift
		    npes=$1
		    ;;
		*)
		    launcher_args="$launcher_args $1"
		    ;;
	    esac
	    ;;
	1)
	    app_args="$app_args $1"
	    ;;
    esac
    shift
done

if [ "$npes" ]
then
    case "$npes" in
      [0-9]*)
        # good, user-supplied
        ;;
       *)
        show_usage_and_exit "NPEs is not a number"
        ;;
    esac
else
    show_usage_and_exit
fi

OPENSHMEM_GASNET_CONDUIT="@GASNET_CONDUIT@"
export OPENSHMEM_GASNET_CONDUIT

case "$OPENSHMEM_GASNET_CONDUIT" in
    smp)
	RUN_IT="env GASNET_PSHM_NODES=$npes $launcher_args $app_args"
        ;;
    udp)
	RUN_IT="$launcher_args $app_args"
	;;
    # delegate to a GASNet launcher, if found
    *)
	# conduit-specific launcher
	launcher="@GASNET_ROOT@/bin/gasnetrun_$OPENSHMEM_GASNET_CONDUIT"
        if [ ! -x "$launcher" ]
        then
            show_usage_and_exit "GASNet launcher for \"$OPENSHMEM_GASNET_CONDUIT\" not found"
        fi
	# pass number of PEs & other args
	RUN_IT="$launcher -n $npes $launcher_args $app_args"
	;;
esac

$RUN_IT

# ---------------------------------------------------------

COMMS_DIR        =    ../comms
COMMS_CPPFLAGS   =    -I$(COMMS_DIR)

# ---------------------------------------------------------

MEMORY_DIR        =    ../memory
MEMORY_CPPFLAGS   =    -I$(MEMORY_DIR)

# ---------------------------------------------------------

CC               = @CC@
CFLAGS           = @CFLAGS@
CPPFLAGS         = @CPPFLAGS@
LD               = @LD@
LDFLAGS          = @LDFLAGS@

CPPFLAGS        += -I..

CPPFLAGS        += $(COMMS_CPPFLAGS)
CPPFLAGS        += $(MEMORY_CPPFLAGS)

ifeq "@DEBUG@" "TRUE"
CPPFLAGS        += -DDEBUG
endif

CFLAGS          += -fPIC

SOURCES = $(wildcard *.c)
OBJECTS = $(SOURCES:.c=.o)

.PHONY: all default clean

all default:	$(OBJECTS)

clean:
	rm -f $(OBJECTS)

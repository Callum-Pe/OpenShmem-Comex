prefix           = @PREFIX@

CC               = @CC@
CFLAGS           = @CFLAGS@
CPPFLAGS         = @CPPFLAGS@
LD               = @LD@
LDFLAGS          = @LDFLAGS@

ifeq "@DEBUG@" "TRUE"
CPPFLAGS        += -DDEBUG
endif

# CPPFLAGS        += -I.
CPPFLAGS        += -I..
CPPFLAGS        += -DINSTALLED_MODULES_DIR="\"$(prefix)/lib/modules\""

CFLAGS          += -fPIC

.PHONY: all default clean

SOURCES  = $(wildcard *.c)
OBJECTS  = $(SOURCES:.c=.o)

all default:	$(OBJECTS)

clean:
	rm -f $(OBJECTS)

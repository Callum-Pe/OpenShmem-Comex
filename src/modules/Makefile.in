HASH_DIR         = ../uthash
HASH_CPPFLAGS    = -I$(HASH_DIR)

# ---------------------------------------------------------

prefix           = @PREFIX@

CC               = @CC@
CFLAGS           = @CFLAGS@
CPPFLAGS         = @CPPFLAGS@
LD               = @LD@
LDFLAGS          = @LDFLAGS@

ifeq "@DEBUG@" "TRUE"
CPPFLAGS        += -DDEBUG
endif

# CPPFLAGS        += -I.
CPPFLAGS        += -I..
CPPFLAGS        += -DINSTALLED_MODULES_DIR="\"$(prefix)/lib/modules\""
CPPFLAGS        += $(HASH_CPPFLAGS)

CFLAGS          += -fPIC

.PHONY: all default clean

SOURCES  = $(wildcard *.c)
OBJECTS  = $(SOURCES:.c=.o)

all default:	$(OBJECTS)

clean:
	rm -f $(OBJECTS)

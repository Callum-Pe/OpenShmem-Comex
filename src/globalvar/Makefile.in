# ---------------------------------------------------------

HASH_DIR         = ../uthash
HASH_CFLAGS      = -I$(HASH_DIR)

# ---------------------------------------------------------

CC               = @CC@
CFLAGS           = @CFLAGS@
CPPFLAGS         = @CPPFLAGS@
LD               = @LD@
LDFLAGS          = @LDFLAGS@

ifeq "@DEBUG@" "TRUE"
CPPFLAGS        += -DDEBUG
endif

CPPFLAGS        += -I..

CFLAGS          += -fPIC
CFLAGS          += $(HASH_CFLAGS)

.PHONY: all default clean

all default:	globalvar.o

clean:
	rm -f globalvar.o

CC               = @CC@
CFLAGS           = @CFLAGS@
CPPFLAGS         = @CPPFLAGS@
LD               = @LD@
LDFLAGS          = @LDFLAGS@

ifeq "@DEBUG@" "TRUE"
CPPFLAGS        += -DDEBUG
endif

CFLAGS          += -fPIC

.PHONY: all default clean

all default:	dlmalloc.o

dlmalloc.o:	dlmalloc.c
	$(CC) -c -DONLY_MSPACES=1 $(CFLAGS) $^

clean:
	rm -f dlmalloc.o
